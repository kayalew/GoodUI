<html>

	<head>
		<title>Home Page - Sew Together</title>

		<meta content="text/html; charset=utf-8" http-equiv="Content-Type" />

		<!-- Load style sheets -->
		
		<!-- Load javascript libraries here -->
		<% content_for :head do %>

		<% end %>

	</head>

	<body onload="start();">
		<%= render 'nav_bar' %>
		<h1 id="title">Welcome to Sew Together!
		</h1>
		
		<h3>
		<% if flash[:notice] %>
			<div id="notice" class="error"><%= flash[:notice] %></div>
		<% end %>
		</h3>
		

	<div id="homeBody">
	<div id="rightSide">
		<h3 class="homeLabel">Already have an account?</h3>
		<div class="homeBox" id="logIn">
		<%= form_tag sessions_path do %>
			<div class="field">
				<%= label_tag :user_name %>
				<%= text_field_tag :user_name, params[:user_name] %>
				<div class="clearFloat"></div>
			</div>
			<div class="field">
				<%= label_tag :password %>
				<%= password_field_tag :password %>
				<div class="clearFloat"></div>
			</div>
			<div class="actions">
				<%= submit_tag :"Log in!" %>
			</div>
			<% end %>
			<div class="clearFloat"></div>
		</div>
		<div id="accountNote">
			<p>	By signing in, you can keep track of your progress as you work through our sewing projects. However, you don't need an account to simply look through the projects and sewing tutorials.</p>
		</div>
	</div>


	<div id="leftSide">
		<h3 class="homeLabel">New Member?</h3>
		<div class="homeBox" id="signUp">
		<%= form_for @user do |f| %>
			<% if @user.errors.any? %>
				<div class=”errors”>
					<h2>Form is invalid</h2>
				</div>
			<% end %>
			<div class="field">
				<label>Email</label>
				<%= f.text_field :email %>
			</div>
			<div class="field">
				<label>User name</label>
				<%= f.text_field :user_name %>
			</div>
			<div class="field">
				<label>Password</label>
				<%= f.password_field :password %>
			</div>
			<div class="field">
				<label>Retype password</label>
				<%= f.password_field :password_confirmation %>
			</div>
			<div class="actions">
				<%= submit_tag :"Sign up!" %> 
			</div>
		<% end %>
		<div class="clearFloat"></div>
		</div>
	</div>
	
	<div class="clearFloat"></div>
	</div>
	</body>
</html>
